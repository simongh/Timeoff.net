@model Timeoff.ResultModels.BankHolidaysViewModel
<div class="modal fade" id="add_new_bank_holiday_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-route-year="@Model.CurrentYear" asp-action="New" asp-controller="BankHoliday" id="add_new_bank_holiday_form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add new Bank Holiday</h4>
                </div>

                @for (int i = 0; i < Model.BankHolidays.Length; i++)
                {
                    <input type="hidden" value="@Model.BankHolidays[i].Name" asp-for="BankHolidays[i].Name" />
                    <input type="hidden" value="@Model.BankHolidays[i].Date" asp-for="BankHolidays[i].Date" />
                }

                <div class="modal-body">

                    <div class="form-group">
                        <label for="bank_holiday_name_new" class="control-label">Name:</label>
                        <input type="text" class="form-control" id="bank_holiday_name_new" name="holidays[@Model.BankHolidays.Length].Name" required>
                    </div>

                    <div class="form-group">
                        <label for="bank_holiday_date_new" class="control-label">Date:</label>
                        <input type="text"
                               class="form-control"
                               id="bank_holiday_date_new"
                               name="holidays[@Model.BankHolidays.Length].date"
                               value="@(new DateTime(Model.CurrentYear,1,1).ToString(Model.DateFormat))"
                               required
                               data-provide="datepicker"
                               data-date-autoclose="1"
                               data-date-format="@Model.DateFormat"
                               data-date-week-start="1">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success single-click">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>


