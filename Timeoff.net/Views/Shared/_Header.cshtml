@using Timeoff

<div class="header">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">TimeOff.Management</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left" asp-authorise>
                    <li><a asp-controller="Calendar" asp-action="Index">Calendar</a></li>
                    @if (User.ShowTeamView())
                    {
                    <li><a asp-controller="Calendar" asp-action="TeamView">Team View</a></li>
                    }
                    <li asp-authorise asp-roles="Admin" class="hidden-xs"><a asp-controller="Users" asp-action="Index">Employees</a></li>
                    <li class="navbar-form navbar-left">
                        <div class="form-group">
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#book_leave_modal" id="book_time_off_btn">New absence</button>
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity?.IsAuthenticated == true){
                        <li class="dropdown" id="header-notification-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <span class="fa fa-bell-o"></span>
                                <span class="label label-info notification-badge hidden"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="dropdown-header">No notifications</li>
                            </ul>
                        </li>
                        <li asp-authorise asp-roles="Admin" class="dropdown hidden-xs">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="fa fa-gears"></span> <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-controller="Settings" asp-action="Index">General</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a asp-controller="Teams" asp-action="Index">Teams</a></li>
                                <li><a asp-controller="PublicHoliday" asp-action="Index">Public Holidays</a></li>
                               @* <li><a asp-controller="Settings" asp-action="CompanyAuthentication">LDAP configuration</a></li>*@
                                <li><a asp-controller="Settings" asp-action="CompanyIntegrationApi">API configuration</a></li>
                                <li><a asp-controller="Users" asp-action="Import">Import employees</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a asp-controller="Audit" asp-action="Emails">Emails audit</a></li>
                                <li><a asp-controller="Reports" asp-action="Index">Reports</a></li>
                            </ul>
                        </li>
                        <li class="visible-xs-block"><a asp-controller="Requests" asp-action="Index">Requests</a></li>
                        <li class="visible-xs-block"><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                        <li class="dropdown hidden-xs">
                            <a id="me_menu" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Me <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-controller="Request" asp-action="Index">Requests</a></li>
                                <li class="hidden-xs"><a asp-controller="Calendar" asp-action="Feeds">Feeds</a></li>
                                <li><a asp-controller="Account" asp-action="ResetPassword">Change Password</a></li>
                                <li role="separator" class="divider hidden-xs"></li>
                                <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    @*{{# if logged_user }}
    {{# if logged_user.company.company_wide_message  }}
    <div class="alert alert-danger" role="alert">{{ logged_user.company.company_wide_message }}</div>
    {{/if}}
    {{/if}}*@

</div>


