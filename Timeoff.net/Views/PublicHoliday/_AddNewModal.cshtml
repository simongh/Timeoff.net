@using Timeoff;
@model Timeoff.Application.PublicHoliday.PublicHolidaysViewModel
<div class="modal fade" id="add_new_public_holiday_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-route-year="@Model.CurrentYear" asp-action="Create" asp-controller="PublicHoliday" id="add_new_public_holiday_form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add new public holiday</h4>
                </div>

                <div class="modal-body">
                    @{
                        var add = new Timeoff.RequestModels.PublicHolidayRequest();
                    }
                    <div class="form-group">
                        <label asp-for="@add.Name" class="control-label">Name:</label>
                        <input type="text" class="form-control" asp-for="@add.Name" required>
                    </div>

                    <div class="form-group">
                        <label asp-for="@add.Date" class="control-label">Date:</label>
                        <input type="text"
                               class="form-control"
                               asp-for="@add.Date"
                               value="@(new DateTime(Model.CurrentYear,1,1).ToString(Model.DateFormat))"
                               required
                               data-provide="datepicker"
                               data-date-autoclose="1"
                               data-date-format="@Model.DateFormat.ToJsFormat()"
                               data-date-week-start="1">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success single-click">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>


