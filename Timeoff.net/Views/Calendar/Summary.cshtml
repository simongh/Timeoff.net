@model Timeoff.Application.LeaveSummary.SummaryViewModel
@using Timeoff;
@{
    Layout = null;
}
@if (Model.ShowDetailed)
{
    <div>
        <strong>Dates:</strong> @Model.StartDate.ToString(Model.DateFormat) <i class="fa fa-long-arrow-right"></i> @Model.EndDate.ToString(Model.DateFormat).
    </div>
    <div>
        <strong>Type:</strong> @Model.Type.
    </div>
    <div>
        <strong>Status:</strong> @Model.Status.AsString().
    </div>
    <div>
        <strong>Employee:</strong> @Model.Name.
    </div>
    <div>
        <strong>Deducted days:</strong> @Model.Days.
    </div>
    <div>
        <strong>Approver:</strong> @Model.Approver.
    </div>
    <div>
        <strong>Requested on:</strong> @Model.Created.ToString(Model.DateFormat).
    </div>
    @if (!string.IsNullOrEmpty(Model.Comment))
    {
        <div>
            <strong>Comments:</strong> @Model.Comment.
        </div>
    }
}
else
{
    <div>
        <strong>Dates:</strong> @Model.StartDate.ToString(Model.DateFormat) <i class="fa fa-long-arrow-right"></i> @Model.EndDate.ToString(Model.DateFormat).
    </div>
    <div>
        <strong>Employee:</strong> @Model.Name.
    </div>
}